.col-md-6.col-md-offset-3.comment-form
  = form_for [@pin, @comment] do |f|
    .form-group
      = f.label :author_name, "Your Name"
      = f.text_field :author_name, {class: 'form-control'}

    .form-group
      = f.label :body
      = f.text_area :body, {class: 'form-control'}

    = f.submit class: "btn btn-primary pull-right"
